doctype html
html(lang='es')
  head
    meta(charset='utf-8')
    meta(name='HandheldFriendly', content='True')
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='apple-mobile-web-app-status-bar-style', content='black')
    meta(name="apple-mobile-web-app-title" content="¿Hay Subte?")
    link(rel='apple-touch-startup-image', href='/startup.png')
    meta(name='viewport', content='width=device-width,initial-scale=1,user-scalable=no')
    link(rel='manifest', href='/manifest.json')
    link(rel='shortcut icon', href='/favicon.ico')
    link(rel='apple-touch-icon-precomposed', href='/favicon-precomposed.png')
    link(rel='apple-touch-icon-precomposed', sizes='120x120' href='/favicon-120.png')
    title ¿Hay Subte? - Estado del Subte
    style.
      html, body {
      width: 100%;
      height: 100%;
      }
      body {
      margin: 0;
      font: 100%/1.4em 'Helvetica Neue', Helvetica, Arial, sans-serif;
      color: #474d51;
      background-color: #fff;
      -webkit-font-smoothing: antialiased;
      }
      ul {
      margin: 0;
      padding: 0;
      display: flex;
      flex-wrap: wrap;
      min-height: 100%;
      list-style: none;
      }
      li {
      width: 100%;
      border: 3px solid #fff;
      display: flex;
      padding: 10px;
      margin: 5px;
      box-sizing: border-box;
      box-shadow: 0 0.125rem 0.313rem rgba( 0, 0, 0, .2 );
      position: relative;
      background-color: #f5f5f5;
      }
      .line--A {
      background-color: #039BE5;
      }
      .line--B {
      background-color: #F82045;
      }
      .line--C {
      background-color: #1565C0;
      }
      .line--D {
      background-color: #00856E;
      }
      .line--E {
      background-color: #673AB7;
      }
      .line--H {
      background-color: #FDD835;
      }
      .badge {
      display: inline-block;
      font-size: 22px;
      color: #fff;
      border-radius: 50%;
      border: 2px solid white;
      padding: 0;
      outline: 0;
      width: 38px;
      height: 38px;
      line-height: 38px;
      box-sizing: content-box;
      text-align: center;
      font-style: normal;
      vertical-align: middle;
      position: absolute;
      left: 5px;
      text-indent: 1px;
      }
      dl {
      margin: 0 0 0 40px;
      }
      dt {
      position: absolute;
      opacity: 0;
      }
      dd {
      display: block;
      margin: 0 10px 0px;
      font-size: 14px;
      }
      .line-name {
      font-weight: bold;
      }
      .line-status {
      text-transform: capitalize;
      }
      .header-main {
      padding: 10px 0 10px 42px;
      color: #fff;
      border-bottom: 1px solid #fff;
      margin: 0 0 5px;
      background: #c75d5d url(/favicon-120.png) no-repeat 7px center;
      background-size: 35px;
      font-size: 15px;
      }
      .share-buttons {
      display: block;
      overflow: hidden;
      margin:5px 0;
      font-size: .9em;
      text-align: center;
      }
      .share-buttons p {
      margin:0;
      }
      .heart {
      font-style: normal;
      font-weight: 500;
      color: #C0392B;
      text-decoration: none;
      }
  body
    main
      header.header-main ¿Hay Subte?
      ul
        each line, key in lines
          li.line
            i(class=`badge line--${key}`)= key
            dl
              dt Nombre
              dd.line-name Linea #{key}
              dt Estado
              dd.line-status #{line.status}
              if (line.status !== 'normal')
                dt Descripción
                dd.line-status-text #{line.text}
      footer.share-buttons
        p
          | with&nbsp;
          i.heart &#10084&nbsp;
          | by&nbsp;
          a(href="https://twitter.com/pazguille", target="_blank") @pazguille
